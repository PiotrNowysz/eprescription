@model DoctorViewModel
@{
    ViewData["Title"] = $"Doctor{Model.LastName}";
}
<a class="btn btn-success" asp-controller="Prescription" asp-action="Add">Add new prescription</a>
<div>Dorctor @Model.LastName</div>
<form asp-controller="Prescription" asp-action="Index">
    <input type="text" name="FilterString" />
    <button type="submit" class="btn btn-success">Filter</button>
</form>
<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prescription in Model.Prescriptions)
            {
                <tr>
                    <th scope="row">@(Model.Prescriptions.IndexOf(prescription)+1)</th>
                    <td>@prescription.Name</td>
                    <td>
                        <a asp-area="" asp-controller="Prescription" asp-action="View" asp-route-prescriptionId="@prescription.Id">View</a>
                        |
                        <a asp-area="" asp-controller="Prescription" asp-action="Delete" asp-route-prescriptionId="@prescription.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
